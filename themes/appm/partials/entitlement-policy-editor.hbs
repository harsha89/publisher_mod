<!-- Modal -->
<div id="entitlement-policy-editor" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close mclose-button" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>Entitlement Policy Editor</h3>
            </div>
            <div class="modal-body">
                <input id="resource-index" type="hidden"/>
                <input id="save-and-close" type="hidden"/>
                <div class="alert alert-dismissible" role="alert" id="notification-text">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <span id="notification-text-data">Better check yourself, you're not looking too good.</span>
                </div>

                <div class="form-group">
                    <label>Name:</label>
                    <input id="policy-name" type="text" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Policy:</label>
                    <div id="policy-content-container">
                        <textarea id="policy-content" style="width:100%;height:100%;border: 1px solid #eee;" class="form-control"></textarea>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <label style="float: left;"><input type="checkbox" id="shared-partial">  Share with everyone   </label>
                <a id="btn-policy-partial-validate" class="btn btn-primary">Validate</a>
                <a id="btn-policy-save" class="btn btn-primary">Save</a>
                <a id="btn-policy-save-and-close" class="btn btn-primary">Save & Close</a>
                <a class="btn mclose-button" data-dismiss="modal">Close</a>
            </div>

        </div>
    </div>
</div>



<style>

    .CodeMirror {
        border: 1px solid #eee;
    }

</style>